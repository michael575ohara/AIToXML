<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >
        
        <LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="#133249"
  			android:gravity="center_vertical"  > 
  			
            <ImageButton
            android:id="@+id/header_logout"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#133249"
            android:scaleType="fitXY"
            android:src="@drawable/logobuttonimage" />
      		   
		</LinearLayout>
		
		<ScrollView
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:scrollbarStyle="outsideOverlay">
            
        	<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical">
            	
       	    	<TextView			            
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dp"
		            android:layout_marginTop="10dp"
		            android:textColor="#6f6f71"
		            android:textSize="13dp"
		            android:text="ORIGIN" />
        	    	 
        	    	<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="80dp"
            			android:layout_marginTop="5dp"
            			android:gravity="center_vertical"
            			android:background="@drawable/ic_preference_normal2">
            			
        	    	     <ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"        					
        					android:layout_marginTop="15dp"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="10dp"  
        					android:layout_marginBottom="10dp"      					
        					android:src="@drawable/origin_city_image"/>   
        	    
	            		 <RelativeLayout
	            			android:layout_width="wrap_content"
	            			android:layout_height="wrap_content"
	            			android:layout_marginTop="5dp"
	            			android:layout_marginLeft="40dp"
	            			android:gravity="center_vertical"
	            			android:layout_alignParentRight="true"	            			
	            			android:background="@drawable/preference_item1" >
	            			
	            			<TextView
	        					android:layout_width="wrap_content" 
	        					android:layout_height="wrap_content"	        					
	        					android:padding="8dp" 
	        					android:text="Origin city"
	        					android:textColor="#6d6e70"
	        					android:textSize="13dp"		
								/>
	            			<ImageView
	            				android:layout_width="wrap_content"
	        					android:layout_height="wrap_content"        	     	
	        					android:scaleType="matrix"
	        					android:layout_centerVertical="true"
	        					android:layout_alignParentRight="true"
	        					android:clickable="true"
	        					android:src="@drawable/origin_city_next_mage" /> 	            			  					
	      				 </RelativeLayout>	      				   
	      			</RelativeLayout>
	      			
        	    	<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="50dp"            			
            			android:gravity="center_vertical"            			
            			android:background="@drawable/ic_preference_normal2">
	            		 
        	    	    <ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_marginTop="15dp"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="10dp"          									
        					android:src="@drawable/origin_date_image" /> 	
	      			
	      				<RelativeLayout
	            			android:layout_width="wrap_content"
	            			android:layout_height="wrap_content"
	            			android:gravity="center_vertical"
	            			android:layout_marginLeft="40dp"
	            			android:layout_alignParentRight="true"	    
	            			android:background="@drawable/preference_item1" >
	            				
	            			<TextView
	        					android:layout_width="wrap_content" 
	        					android:layout_height="wrap_content"	        					
	        					android:padding="8dp" 
	        					android:text="Origin date"
	        					android:textSize="13dp"		
								android:textColor="#6d6e70" />  
							<ImageView
	            				android:layout_width="wrap_content"
	        					android:layout_height="wrap_content"        	     	
	        					android:scaleType="matrix"
	        					android:layout_centerVertical="true"
	        					android:layout_alignParentRight="true"
	        					android:clickable="true"
	        					android:src="@drawable/origin_city_next_mage_empty" /> 	       
										
	      				</RelativeLayout>
	      			</RelativeLayout>      				
        	    	
        	    	<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"            			
            			android:gravity="center_vertical"            			
            			android:background="@drawable/ic_preference_normal2">
	      				
        	    	    <ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        					      	     	
        					android:scaleType="matrix"
        					android:layout_marginTop="15dp"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="10dp" 
        					android:src="@drawable/distance_image" /> 	
      				
	      				<RelativeLayout
	            			android:layout_width="fill_parent"
	            			android:layout_height="100dp"
	            			android:gravity="center_vertical"
	            			android:layout_marginLeft="40dp"
	            			android:layout_alignParentRight="true"
	            			android:background="@drawable/ic_preference_normal2" >	            			
	      				    
	            			<TextView
	            			    android:id="@+id/distance_origin"
	        					android:layout_width="wrap_content" 
	        					android:layout_height="wrap_content"
	        					
	        					android:padding="8dp" 
	        					android:text="Distance from origin"
	        					android:textSize="10dp"		
								android:textColor="#6d6e70" />            			
					             
					        <SeekBar
							    android:id="@+id/seekBar1"
							    android:layout_width="300dp"
							    android:layout_height="66.2dp"
							    android:layout_below="@+id/distance_origin"							    
							    android:progressDrawable="@drawable/red_scrubber_progress"
							    android:thumb="@drawable/red_scrubber_control" />     							
	      				</RelativeLayout>
	      			</RelativeLayout>      				
      				
      				<!--   ********************************************************************   -->
      				<TextView			            
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="20dp"
			            android:layout_marginTop="10dp"
			            android:textColor="#6f6f71"
			            android:textSize="13dp"
			            android:text="DESTINATION(OPTIONAL)" />
      				
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="80dp"
            			android:layout_marginTop="5dp"
            			android:gravity="center_vertical"
            			android:background="@drawable/ic_preference_normal2">
	      				
      				    <ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_marginTop="15dp"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="10dp" 
        					android:src="@drawable/origin_city_image" />     
      				
	      				<RelativeLayout
	            			android:layout_width="wrap_content"
	            			android:layout_height="wrap_content"
	            			android:layout_marginTop="5dp"
	            			android:layout_marginLeft="40dp"
	            			android:layout_alignParentRight="true"	            			
	            			android:background="@drawable/preference_item1" >     			
	      				    
	            			<TextView
	        					android:layout_width="wrap_content" 
	        					android:layout_height="wrap_content"	        					
	        					android:padding="8dp" 
	        					android:text="Destination city"
	        					android:textSize="14dp"		
								android:textColor="#6d6e70" />
	            			<ImageView
	            				android:layout_width="wrap_content"
	        					android:layout_height="wrap_content"        	     	
	        					android:scaleType="matrix"
	        					android:layout_centerVertical="true"
	        					android:layout_alignParentRight="true"
	        					android:clickable="true"
	        					android:src="@drawable/origin_city_next_mage_empty" /> 		            			 					
	      				</RelativeLayout>
	      			</RelativeLayout>
	      			
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"            			
            			android:gravity="center_vertical"            			
            			android:background="@drawable/ic_preference_normal2">
	      				
        	    	    <ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        					      	     	
        					android:scaleType="matrix"
        					android:layout_marginTop="15dp"
        					android:layout_alignParentLeft="true"
        					android:layout_marginLeft="10dp" 
        					android:src="@drawable/distance_image" /> 	
      				
	      				<RelativeLayout
	            			android:layout_width="fill_parent"
	            			android:layout_height="100dp"
	            			android:gravity="center_vertical"
	            			android:layout_marginLeft="40dp"
	            			android:layout_alignParentRight="true"
	            			android:background="@drawable/ic_preference_normal2" >	            			
	      				    
	            			<TextView
	            			    android:id="@+id/distance_destination"
	        					android:layout_width="wrap_content" 
	        					android:layout_height="wrap_content"
	        					
	        					android:padding="8dp" 
	        					android:text="Distance from destination"
	        					android:textSize="10dp"		
								android:textColor="#6d6e70" />            			
					             
					        <SeekBar
							    android:id="@+id/seekBar2"
							    android:layout_width="300dp"
							    android:layout_height="66.2dp"							    
							    android:layout_below="@+id/distance_destination"							    
							    android:progressDrawable="@drawable/red_scrubber_progress"
							    android:thumb="@drawable/red_scrubber_control" />     							
	      				</RelativeLayout>
	      			</RelativeLayout>      			
      				
      				<!--   ***********************************************************************   -->     				
      				
        	</LinearLayout>
    </ScrollView>
</LinearLayout>
